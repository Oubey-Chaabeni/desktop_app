<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.desktop_app.PrimaryController"
      prefHeight="720.0" 
      prefWidth="1280.0"
      styleClass="root-container"
      stylesheets="@Primary.css">
    
    <!-- Main Content Area (Left Side - Orange Background) -->
    <StackPane HBox.hgrow="ALWAYS" styleClass="content-area">
        <!-- Background Image -->
        <ImageView fitHeight="720.0" fitWidth="1024.0" preserveRatio="false">
            <image>
                <Image url="@Background.png"/>
            </image>
        </ImageView>
        
        <!-- Buttons Grid Overlay -->
        <GridPane alignment="CENTER" hgap="40" vgap="40" styleClass="buttons-grid">
            <padding>
                <Insets top="80" bottom="200" left="80" right="80"/>
            </padding>
            
            <!-- Top Row Buttons -->
            <Button text="رسومات عقارية" styleClass="main-button" 
                    GridPane.columnIndex="0" GridPane.rowIndex="0"
                    prefWidth="220" prefHeight="60"
                    onAction="#handleRealEstateDrawings"/>
            
            <Button text="خدمات أخرى" styleClass="main-button" 
                    GridPane.columnIndex="1" GridPane.rowIndex="0"
                    prefWidth="220" prefHeight="60"
                    onAction="#handleOtherServices"/>
            
            <Button text="الملفات" styleClass="main-button" 
                    GridPane.columnIndex="2" GridPane.rowIndex="0"
                    prefWidth="220" prefHeight="60"
                    onAction="#handleFiles"/>
            
            <!-- Bottom Center Button -->
            <Button text="الفواتير" styleClass="main-button" 
                    GridPane.columnIndex="1" GridPane.rowIndex="1"
                    prefWidth="220" prefHeight="60"
                    onAction="#handleInvoices"/>
            
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200"/>
            </columnConstraints>
            
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" minHeight="100"/>
                <RowConstraints vgrow="SOMETIMES" minHeight="100"/>
            </rowConstraints>
        </GridPane>
    </StackPane>
    
    <!-- Navigation Sidebar (Right Side) -->
    <VBox prefWidth="256.0" styleClass="sidebar" spacing="0">
        <!-- Logo Section -->
        <StackPane styleClass="logo-container" VBox.vgrow="NEVER">
            <VBox.margin>
                <Insets bottom="30"/>
            </VBox.margin>
            <ImageView fitHeight="120.0" fitWidth="120.0" preserveRatio="true">
                <image>
                    <Image url="@icon.jpeg"/>
                </image>
            </ImageView>
        </StackPane>
        
        <!-- Navigation Buttons -->
        <VBox styleClass="nav-buttons-container" spacing="0" VBox.vgrow="ALWAYS">
            <Button fx:id="navHome" text="الواجهة الرئيسية" 
                    styleClass="nav-button, nav-button-active" 
                    maxWidth="Infinity"
                    onAction="#navigateToHome"/>
            
            <Button fx:id="navFiles" text="الملفات" 
                    styleClass="nav-button" 
                    maxWidth="Infinity"
                    onAction="#navigateToFiles"/>
            
            <Button fx:id="navInvoices" text="الفواتير" 
                    styleClass="nav-button" 
                    maxWidth="Infinity"
                    onAction="#navigateToInvoices"/>
            
            <Button fx:id="navOtherServices" text="خدمات أخرى" 
                    styleClass="nav-button" 
                    maxWidth="Infinity"
                    onAction="#navigateToOtherServices"/>
            
            <Button fx:id="navRealEstateFees" text="الرسوم العقارية" 
                    styleClass="nav-button" 
                    maxWidth="Infinity"
                    onAction="#navigateToRealEstateFees"/>
        </VBox>
    </VBox>
</HBox>
